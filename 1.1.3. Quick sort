	#include <stdio.h>
	
	void displaySubArray(int a[], int low, int high){
		for (int i = low; i<= high; i++){
			printf("%d ", a[i]);
			
		}
		printf("\n");
		
	}
	void displayFullArray(int a[], int n){
		for (int i = 0; i< n; i++){
			printf("%d ", a[i]);
			
		}
		printf("\n");
		
	}
	int partition(int a[], int low, int high){
		int pivot = a[high];
		int i = low - 1,temp;
		for(int j = low; j<high; j++){
			if(a[j]< pivot){
				i++;
				temp = a[i];
				a[i] = a[j];
				a[j] = temp;
				
			}
		}
		temp = a[i + 1];
		a[i + 1]= a[high];
		a[high] = temp;
		return i+ 1;
	}
	
	void quickSort(int a[], int low, int high){
		if(low < high){
			int pi = partition(a, low, high);
			printf("Pass: ");
			displaySubArray(a, low, high);
	
			quickSort(a, low, pi - 1);
			quickSort(a, pi + 1, high);
			
		}
	}
	
	int main(){
		int n;
		printf("number of elements: ");
		
		scanf("%d", &n);
		int a[n];
		printf("elements: ");
		for(int i = 0; i<n; i++){
			scanf("%d", &a[i]);
		}
		printf("Original array: ");
		displayFullArray(a, n);
	
		quickSort(a, 0, n-1);
	
		printf("Sorted array: ");
		displayFullArray(a, n);
	
		return 0;
	}
